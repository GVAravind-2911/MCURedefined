{
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "jsx": "preserve",
    "esModuleInterop": true,
    "target": "ES2018",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "typeRoots": ["./types", "node_modules/@types"]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "src/components/BlogComponent.tsx", "src/components/Header.tsx", "src/components/LoadingSpinner.tsx", "src/app/(nonauthpages)/create-blog/page.tsx", "src/app/(nonauthpages)/create-blog/preview/page.tsx", "postcss.config.mjs"  ],
  "exclude": [
    "node_modules"
  ]
}
